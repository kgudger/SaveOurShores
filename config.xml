<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.saveourshores" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Save Our Shores</name>
    <description>
        Marine Debris Collection Data Input Application.
    </description>
    <author email="kgudger@gmail.com" href="http://saveourshores.org">
        Keith Gudger
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon platform="android" qualifier="xxhdpi" src="www/images/SOSlogo144.png" />
        <icon platform="android" qualifier="xhdpi" src="www/images/SOSlogo96.png" />
        <icon platform="android" qualifier="hdpi" src="www/images/SOSlogo72.png" />
        <icon platform="android" qualifier="mdpi" src="www/images/SOSlogo48.png" />
        <icon platform="android" qualifier="ldpi" src="www/images/SOSlogo36.png" />
        <splash density="ldpi" src="www/images/SOSlogo320426.png" />
        <splash density="mdpi" src="www/images/SOSlogo320470.png" />
        <splash density="hdpi" src="www/images/SOSlogo480640.png" />
        <splash density="xhdpi" src="www/images/SOSlogo720960.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="57" platform="ios" src="www/images/SOSlogo57.png" width="57" />
        <icon height="114" platform="ios" src="www/images/SOSlogo114.png" width="114" />
        <icon height="72" platform="ios" src="www/images/SOSlogo72.png" width="72" />
        <icon height="144" platform="ios" src="www/images/SOSlogo144.png" width="144" />
        <icon height="29" platform="ios" src="www/images/SOSlogo29.png" width="29" />
        <icon height="58" platform="ios" src="www/images/SOSlogo58.png" width="58" />
        <icon height="50" platform="ios" src="www/images/SOSlogo50.png" width="50" />
        <icon height="100" platform="ios" src="www/images/SOSlogo100.png" width="100" />
        <splash height="480" platform="ios" src="www/images/SOSlogo320x480.png" width="320" />
        <splash height="960" platform="ios" src="www/images/SOSlogo640x960.png" width="640" />
        <splash height="1136" platform="ios" src="www/images/SOSlogo640x1136.png" width="640" />
        <splash height="1334" platform="ios" src="www/images/SOSlogo750x1334.png" width="750" />
        <splash height="2208" platform="ios" src="www/images/SOSlogo1242x2208.png" width="1242" />
        <splash height="1024" platform="ios" src="www/images/SOSlogo768x1024.png" width="768" />
        <splash height="2048" platform="ios" src="www/images/SOSlogo1536x2048.png" width="1536" />
    </platform>
    <engine name="android" spec="~4.1.1" />
    <engine name="ios" spec="~3.9.2" />
</widget>
