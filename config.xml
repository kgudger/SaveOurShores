<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.saveourshores" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Save Our Shores</name>
    <description>
        Marine Debris Collection Data Input Application.
    </description>
    <author email="kgudger@gmail.com" href="http://saveourshores.org">
        Keith Gudger
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<preference name="SplashScreen" value="screen" />
	<preference name="SplashScreenDelay" value="5000" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/images/SOSlogo144.png" platform="android" qualifier="xxhdpi" />
        <icon src="www/images/SOSlogo96.png" platform="android" qualifier="xhdpi" />
        <icon src="www/images/SOSlogo72.png" platform="android" qualifier="hdpi" />
        <icon src="www/images/SOSlogo48.png" platform="android" qualifier="mdpi" />
        <icon src="www/images/SOSlogo36.png" platform="android" qualifier="ldpi" />
		<splash src="platforms/android/res/drawable-ldpi/screen.png" density="ldpi" />
		<splash src="platforms/android/res/drawable-mdpi/screen.png" density="mdpi" />
		<splash src="platforms/android/res/drawable-hdpi/screen.png" density="hdpi" />
		<splash src="platforms/android/res/drawable-xhdpi/screen.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~4.1.1" />
</widget>
