<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.saveourshores" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <icon platform="android" qualifier="xxhdpi" src="www/images/SOSlogo144.png" />
    <icon platform="android" qualifier="xhdpi" src="www/images/SOSlogo96.png" />
    <icon platform="android" qualifier="hdpi" src="www/images/SOSlogo72.png" />
    <icon platform="android" qualifier="mdpi" src="www/images/SOSlogo48.png" />
    <icon platform="android" qualifier="ldpi" src="www/images/SOSlogo36.png" />
    <splash density="ldpi" src="platforms/android/res/drawable-ldpi/screen.png" />
    <splash density="mdpi" src="platforms/android/res/drawable-mdpi/screen.png" />
    <splash density="hdpi" src="platforms/android/res/drawable-hdpi/screen.png" />
    <splash density="xhdpi" src="platforms/android/res/drawable-xhdpi/screen.png" />
    <name>Save Our Shores</name>
    <description>
        Marine Debris Collection Data Input Application.
    </description>
    <author email="kgudger@gmail.com" href="http://saveourshores.org">
        Keith Gudger
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
</widget>
